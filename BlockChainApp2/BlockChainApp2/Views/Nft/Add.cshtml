@model BlockChainApp2.ViewModels.NftFormViewModel

@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("Save","Nft",FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
<div class="text-left bg-white-custom">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Nft.nft_nick, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Nft.nft_nick, new { htmlAttributes = new { @class = "form-control  text-left w-25" } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Nft.nft_creator, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Nft.nft_creator, new { htmlAttributes = new { @class = "form-control  text-left w-25" } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Nft.nft_price, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Nft.nft_price, new { htmlAttributes = new { @class = "form-control  text-left w-25" } })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.Nft.category_id, "category_id", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.Nft.category_id, new SelectList(Model.Categories, "category_id", "category_name"), new { htmlAttributes = new { @class = "form-control  text-left w-25" } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Nft.nft_sale, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.Nft.nft_sale)
            </div>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Nft.nft_source, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Nft.nft_source, new { htmlAttributes = new { @class = "form-control text-left w-25" } })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}
